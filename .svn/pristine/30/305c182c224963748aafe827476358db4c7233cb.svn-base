<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical" >
    
	<RelativeLayout 
	    android:id="@+id/title"
	    android:layout_width="fill_parent"
	    android:layout_height="48dp"
	    android:orientation="horizontal" 
	    android:background="@color/color_blue">
	    <Button
	        android:id="@+id/btn_title_left"
	        android:layout_width="50dp"
	        android:layout_height="25dp"
	        android:layout_alignParentLeft="true" 
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="7.0dip"
	        android:paddingLeft="5.0dip"
	        android:paddingRight="5.0dip"
	        android:background="@drawable/ic_common_left" />
	     <TextView 
	        android:id="@+id/top_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="识别记录"
	        android:layout_centerInParent="true"
	        android:lines="1"
	        android:textSize="19sp"
	        android:textColor="@color/color_white"/>
	     <TextView 
	        android:id="@+id/top_faceset"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="刷新"
	        android:layout_marginRight="15.0dip"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:lines="1"
	        android:textSize="16sp"
	        android:textColor="@color/color_white"/>
	</RelativeLayout>
    
   	<ScrollView    
	    android:layout_width="fill_parent"    
	    android:layout_height="fill_parent" 
	    android:scrollbars="none"    
	    android:fadingEdge="vertical">
	<LinearLayout 
	    android:id="@+id/layout_facegone1"
	    android:visibility="invisible"
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical" >
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="150.0dip"
		android:orientation="horizontal" 
		android:weightSum="2">

		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="vertical" >

		    <ImageView
		        android:layout_width="match_parent"
		        android:layout_height="75px"
		        android:layout_weight="0.42"
		        android:paddingLeft="10.0dip"
		        android:paddingRight="10.0dip"
		        android:src="@drawable/record3" />

		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:text="2014-7-18-失败"
		        android:textColor="@color/color_black" />
		</LinearLayout>

		<LinearLayout 
			android:layout_width="fill_parent"
			 android:layout_height="fill_parent"
			android:orientation="vertical" 
			android:layout_weight="1">	
	 	    <ImageView 
	 	        android:src="@drawable/record2"
		        android:layout_width="match_parent"
		        android:layout_height="75px"
		        android:layout_weight="0.42"
	 	        android:paddingLeft="10.0dip"
	 	        android:paddingRight="10.0dip"
	 	        />
	 	    <TextView 
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:text="2014-7-19-成功"
	 	        android:textColor="@color/color_black"
	 	        android:layout_gravity="center_horizontal"
	 	        />		    
 	    
 	    </LinearLayout>
	</LinearLayout>
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="150.0dip"
		android:orientation="horizontal" 
		android:weightSum="2">
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical" 
			android:layout_weight="1">	
	 	    <ImageView 
	 	        android:src="@drawable/record4"
		        android:layout_width="match_parent"
		        android:layout_height="75px"
		        android:layout_weight="0.42"
	 	        android:paddingLeft="10.0dip"
	 	        android:paddingRight="10.0dip"
	 	        />
	 	    <TextView 
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:text="2014-7-19-失败"
	 	        android:textColor="@color/color_black"
	 	        android:layout_gravity="center_horizontal"
	 	        />			    

 	    </LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			 android:layout_height="fill_parent"
			android:orientation="vertical" 
			android:layout_weight="1">	
		    
	 	    <ImageView 
	 	        android:src="@drawable/record5"
		        android:layout_width="match_parent"
		        android:layout_height="75px"
		        android:layout_weight="0.42"
	 	        android:paddingLeft="10.0dip"
	 	        android:paddingRight="10.0dip"
	 	        />
	 	    <TextView 
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:text="2014-7-20-成功"
	 	        android:textColor="@color/color_black"
	 	        android:layout_gravity="center_horizontal"
	 	        />	 	    
 	    </LinearLayout>
	</LinearLayout>
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="150.0dip"
		android:orientation="horizontal" 
		android:weightSum="2">

		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="vertical" >
	
	 	    <ImageView 
	 	        android:src="@drawable/record7"
		        android:layout_width="match_parent"
		        android:layout_height="75px"
		        android:layout_weight="0.42"
	 	        android:paddingLeft="10.0dip"
	 	        android:paddingRight="10.0dip"
	 	        />
	 	    <TextView 
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:text="2014-7-20-失败"
	 	        android:textColor="@color/color_black"
	 	        android:layout_gravity="center_horizontal"
	 	        />			    

 	    </LinearLayout>
		<LinearLayout 
		    android:id="@+id/layout_facegone"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
			android:orientation="vertical" 
			android:visibility="invisible">	
	 	    <ImageView 
	 	        android:src="@drawable/record6"
		        android:layout_width="match_parent"
		        android:layout_height="75px"
		        android:layout_weight="0.42"
	 	        android:paddingLeft="10.0dip"
	 	        android:paddingRight="10.0dip"
	 	        />
	 	    <TextView 
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:text="2014-7-20-成功"
	 	        android:textColor="@color/color_black"
	 	        android:layout_gravity="center_horizontal"
	 	        />			    

 	    </LinearLayout>
	</LinearLayout>
	</LinearLayout>
	
	</ScrollView>
</LinearLayout>