<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical" >
    
    <include layout="@layout/title_bar"/>
    
<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >    
	       
    	<RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30.0dip"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	        android:padding="5dp" >
			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerVertical="true"
	            android:text="启用提示" />

			<ToggleButton
				android:id="@+id/toggleButton_cushion"
				android:layout_width="60.0dip"
				android:layout_height="35.0dip"
				android:layout_alignParentRight="true"
				android:textOn=""
				android:textOff=""
				android:background="@drawable/toggle_me" />

	    </RelativeLayout>
	    
		<TextView
	        style="@style/Smile.TextView._Black"
	        android:layout_marginTop="10.0dip"
	        android:layout_marginLeft="15.0dip"
	        android:layout_marginRight="15.0dip"
	        android:layout_marginBottom="30.0dip"
	        android:layout_centerVertical="true"
	        android:textSize="16sp"
	        android:text="坐垫提示启用后，如果感应到压力会在设定的时间后提示您"
	        android:textColor="@color/color_hint" />
	       
		<RelativeLayout
		    android:id="@+id/layout_cushion_time"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	        android:padding="5dp" >
			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerVertical="true"
	            android:text="设定时间" />
			
			<TextView
			    android:id="@+id/text_fenzhong"
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:drawableRight="@drawable/ic_common_arrow"
	            android:text="分钟"
	            android:textColor="@color/color_hint" />
			
			<TextView
	            android:id="@+id/text_cushion_time"
	            style="@style/Smile.TextView._Black"
	        	android:layout_toLeftOf="@id/text_fenzhong"
	            android:layout_centerVertical="true"
	            android:text="15"
	            android:textColor="@color/color_hint" />


	    </RelativeLayout>
	</LinearLayout>
</LinearLayout>