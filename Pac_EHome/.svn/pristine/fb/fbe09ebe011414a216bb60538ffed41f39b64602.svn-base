<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical" >
    
    <include layout="@layout/title_bar"/>
    
    <ScrollView    
	    android:layout_width="fill_parent"    
	    android:layout_height="fill_parent"  
	    android:layout_below="@id/title"  
	    android:scrollbars="none"    
	    android:fadingEdge="vertical">
 	
 	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >    
	       
    	<RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30.0dip"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	        android:padding="5dp" >
			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerVertical="true"
	            android:text="启用" />

			<ToggleButton
				android:id="@+id/toggleButton_humiture"
				android:layout_width="60.0dip"
				android:layout_height="35.0dip"
				android:layout_alignParentRight="true"
				android:textOn=""
				android:textOff=""
				android:background="@drawable/toggle_me_opposite" />

	    </RelativeLayout>
	    
		<TextView
	        style="@style/Smile.TextView._Black"
	        android:layout_margin="15.0dip"
	        android:layout_centerVertical="true"
	        android:textSize="16sp"
	        android:text="启用后，会记录每小时平均的室内数据"
	        android:textColor="@color/color_hint" />
	    
		<TextView
	        style="@style/Smile.TextView._Black"
	        android:layout_margin="15.0dip"
	        android:layout_centerVertical="true"
	        android:textSize="16sp"
	        android:text="当前数据:"
	        android:textColor="@color/color_hint" />
		
		<RelativeLayout
		    android:id="@+id/layout_temperature"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	        android:padding="5dp" >
			
		    <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:src="@drawable/temperature"
		        />
		    					
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="50.0dip"
	            android:layout_centerVertical="true"
	            android:text="温度" />

			<TextView
	            android:id="@+id/text_temperature"
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:text="26℃"
	            android:textColor="@color/color_hint" />

	    </RelativeLayout>
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/base_line_width_2"
	        android:background="@drawable/prefresh_list_cutline" >
	    </View>
		<RelativeLayout
		    android:id="@+id/layout_humidity"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	        android:padding="5dp" >
			
		    <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:src="@drawable/humidity2"
		        />
		    			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="50.0dip"
	            android:layout_centerVertical="true"
	            android:text="湿度" />

			<TextView
	            android:id="@+id/text_humidity"
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:text="39%"
	            android:textColor="@color/color_hint" />

	    </RelativeLayout>
	    
		<View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/base_line_width_2"
	        android:background="@drawable/prefresh_list_cutline" >
	    </View>
		<RelativeLayout
		    android:id="@+id/layout_humidity"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	        android:padding="5dp" >
			
		    <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:src="@drawable/kongqizhiliang"
		        />
		    			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="50.0dip"
	            android:layout_centerVertical="true"
	            android:text="空气质量" />

			<TextView
	            android:id="@+id/text_humidity"
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:text="65mg/m³"
	            android:textColor="@color/color_hint" />

	    </RelativeLayout>
	    
		<View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/base_line_width_2"
	        android:background="@drawable/prefresh_list_cutline" >
	    </View>
		<RelativeLayout
		    android:id="@+id/layout_humidity"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	        android:padding="5dp" >
			
		    <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:src="@drawable/meiqi"
		        />
		    			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="50.0dip"
	            android:layout_centerVertical="true"
	            android:text="一氧化碳" />

			<TextView
	            android:id="@+id/text_humidity"
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:text="30ppm"
	            android:textColor="@color/color_hint" />

	    </RelativeLayout>
		
		
		<TextView
	        style="@style/Smile.TextView._Black"
	        android:layout_margin="15.0dip"
	        android:layout_centerVertical="true"
	        android:textSize="16sp"
	        android:text="室内数据走向图"
	        android:textColor="@color/color_hint" />	    
		
		<RelativeLayout
		    android:id="@+id/tab_humiture"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	        android:padding="5dp" >
			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerVertical="true"
	            android:text="温湿度" />

			<TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:drawableRight="@drawable/ic_common_arrow"
	            android:text=""
	            android:textColor="@color/color_hint" />

	    </RelativeLayout>
	     <View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/base_line_width_2"
	        android:background="@drawable/prefresh_list_cutline" >
	    </View>	    
		<RelativeLayout
		    android:id="@+id/tab2_humiture"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	        android:layout_marginBottom="30dp"
	        android:padding="5dp" >
			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerVertical="true"
	            android:text="空气质量" />

			<TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:drawableRight="@drawable/ic_common_arrow"
	            android:text=""
	            android:textColor="@color/color_hint" />

	    </RelativeLayout>
	</LinearLayout>
	
	</ScrollView>
</LinearLayout>