<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical" >
    
    <include layout="@layout/title_bar"/>
 <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >    
	       
    	<RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30.0dip"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	        android:padding="5dp" >
			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerVertical="true"
	            android:text="启用NFC" />

			<ToggleButton
				android:id="@+id/toggleButton_door_nfc"
				android:layout_width="60.0dip"
				android:layout_height="35.0dip"
				android:layout_alignParentRight="true"
				android:textOn=""
				android:textOff=""
				android:background="@drawable/toggle_me" />

	    </RelativeLayout>
	    
    	
    	<RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:layout_marginBottom="10.0dip"
	        android:minHeight="50dp"
	        android:padding="5dp" >
			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerVertical="true"
	            android:text="启用人脸识别" />

			<ToggleButton
				android:id="@+id/toggleButton_door_face"
				android:layout_width="60.0dip"
				android:layout_height="35.0dip"
				android:layout_alignParentRight="true"
				android:textOn=""
				android:textOff=""
				android:background="@drawable/toggle_me" />

	    </RelativeLayout>
	    
		<TextView
	        style="@style/Smile.TextView._Black"
	        android:layout_margin="15.0dip"
	        android:layout_centerVertical="true"
	        android:textSize="16sp"
	        android:text="启用人脸识别后会记录所有成功与失败的图像:"
	        android:textColor="@color/color_hint" />	 	    
		
		<RelativeLayout
		    android:id="@+id/layout_door_face"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/color_white"
	        android:minHeight="50dp"
	        android:padding="5dp" >
			
	        <TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_marginLeft="10.0dip"
	            android:layout_centerVertical="true"
	            android:text="人脸识别记录" />

			<TextView
	            style="@style/Smile.TextView._Black"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:drawablePadding="10dp"
	            android:drawableRight="@drawable/ic_common_arrow"
	            android:text=""
	            android:textColor="@color/color_hint" />

	    </RelativeLayout>
	</LinearLayout>
</LinearLayout>