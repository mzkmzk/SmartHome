<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical" >
    
	<RelativeLayout 
	    android:id="@+id/title"
	    android:layout_width="fill_parent"
	    android:layout_height="48dp"
	    android:orientation="horizontal" 
	    android:background="@color/color_blue">
	    <Button
	        android:id="@+id/btn_title_left"
	        android:layout_width="50dp"
	        android:layout_height="25dp"
	        android:layout_alignParentLeft="true" 
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="7.0dip"
	        android:paddingLeft="5.0dip"
	        android:paddingRight="5.0dip"
	        android:background="@drawable/ic_common_left" />
	     <TextView 
	        android:id="@+id/top_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="空调"
	        android:layout_centerInParent="true"
	        android:lines="1"
	        android:textSize="19sp"
	        android:textColor="@color/color_white"/>
	     <TextView 
	        android:id="@+id/top_airset"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="设置"
	        android:layout_marginRight="15.0dip"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:lines="1"
	        android:textSize="16sp"
	        android:textColor="@color/color_white"/>
	</RelativeLayout>
	    
    <ScrollView    
	    android:layout_width="fill_parent"    
	    android:layout_height="fill_parent"  
	    android:layout_below="@id/title"  
	    android:scrollbars="none"    
	    android:fadingEdge="vertical">
   	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="center_vertical"
	    android:orientation="vertical" >
	   
   	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="170.0dip"
	        android:layout_margin="20.0dip"
	        android:padding="20.0dip"
			android:background="@drawable/viewing">

	        <TextView
	            android:id="@+id/text_air_WenDu"
	            android:visibility="gone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_centerVertical="true"
	            android:textSize="30sp"
	            android:text="25℃"
	            android:textColor="@color/color_green" />
	        
	        <TextView
	            android:id="@+id/text_air_speed"
	            android:visibility="gone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentRight="true"
	            android:layout_centerHorizontal="true"
	            android:textSize="30sp"
	            android:text="高速"
	            android:textColor="@color/color_green" />

	        <TextView
	             android:id="@+id/text_air_FengSuView"
	             android:visibility="gone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_toLeftOf="@id/text_air_speed"
	            android:textSize="30sp"
	            android:text="风速:"
	            android:textColor="@color/color_green" />
	        
	        <TextView
	             android:id="@+id/btn_air_GanZao"
	             android:visibility="gone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentBottom="true"
	            android:layout_centerVertical="true"
	            android:textSize="30sp"
	            android:text="干燥"
	            android:textColor="@color/color_green" />

	        <TextView
	            android:id="@+id/btn_air_SaoFeng"
	            android:visibility="gone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_alignParentRight="true"
	            android:layout_centerHorizontal="true"
	            android:textSize="30sp"
	            android:text="左右扫风"
	            android:textColor="@color/color_green" />

			
	    </RelativeLayout>
	    
   	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:minHeight="40dp"
	        android:padding="10dp" >

   	        <Button
   	            android:id="@+id/btn_air_modal"
   	            android:layout_width="70dp"
   	            android:layout_height="70dp"
   	            android:layout_marginLeft="90dp"
   	            android:layout_alignParentLeft="true"
   	            android:text="模式"
   	            android:background="@drawable/toggle_switch_other"
   	            android:textSize="10dp" />
   	        
			<ToggleButton
   	            android:id="@+id/btn_air_windsweeper"
   	            android:layout_width="70dp"
   	            android:layout_height="70dp"
   	            android:layout_marginRight="90dp"
   	            android:layout_alignParentRight="true"
   	           	android:background="@drawable/toggle_switch_other"
   	            android:textOn="左右"
				android:textOff="上下"
				android:textSize="10dp"/>
	    </RelativeLayout>
   	    
   	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:minHeight="40dp"
	        android:padding="10dp" >

   	        <ToggleButton
   	            android:id="@+id/btn_air_switch"
   	            android:layout_width="100dp"
   	            android:layout_height="100dp"
   	           	android:background="@drawable/toggle_switch"
   	            android:textOn=""
				android:textOff=""
				android:textColor="@color/color_hint"
   	            android:layout_centerHorizontal="true"/>

   	        <Button
   	            android:id="@+id/btn_air_down"
   	            android:layout_width="70dp"
   	            android:layout_height="70dp"
   	            android:layout_marginLeft="40dp"
   	            android:layout_alignParentLeft="true"
   	            android:layout_centerVertical="true"
   	            android:background="@drawable/btn_left"/>

   	        <Button
   	            android:id="@+id/btn_air_up"
   	            android:layout_width="70dp"
   	            android:layout_height="70dp"
   	            android:layout_marginRight="40dp"
   	            android:layout_alignParentRight="true"
   	            android:layout_centerVertical="true"
   	            android:background="@drawable/btn_right" />
			
	    </RelativeLayout>
   	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:minHeight="40dp"
	        android:padding="10dp" >

   	        <Button
   	            android:id="@+id/btn_air_speed"
   	            android:layout_width="70dp"
   	            android:layout_height="70dp"
   	            android:layout_marginLeft="90dp"
   	            android:layout_alignParentLeft="true"
   	            android:text="风速" 
   	            android:textSize="10dp"
   	            android:background="@drawable/toggle_switch_other"/>

   	        <Button
   	            android:id="@+id/btn_air_dry"
   	            android:layout_width="70dp"
   	            android:layout_height="70dp"
   	            android:layout_marginRight="90dp"
   	            android:layout_alignParentRight="true"
   	            android:text="@string/air_dry"
   	            android:background="@drawable/toggle_switch_other"
   	            android:textSize="10dp" />
			
	    </RelativeLayout>
	    
   	</LinearLayout>
   	</ScrollView>
</RelativeLayout>